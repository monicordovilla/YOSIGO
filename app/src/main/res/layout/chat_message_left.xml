<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:background="@drawable/background_left">

    <TextView
        android:id="@+id/show_date_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:typeface="monospace"
        android:text="Fecha"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/show_name_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:typeface="monospace"
        android:text="Nombre"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/show_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:text="Nombre"
        android:visibility="gone"
        android:padding="8dp"/>

    <ImageView
        android:id="@+id/show_image_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:adjustViewBounds="true"/>

    <VideoView
        android:id="@+id/show_video_message"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:visibility="gone"
        android:backgroundTint="@color/black"
        android:adjustViewBounds="true"/>


    <LinearLayout
        android:id="@+id/show_btn_hear_message"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/oir"
            />
        <ImageButton
            android:id="@+id/btn_hear_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_play"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@color/black"
            />
        <ImageButton
            android:id="@+id/btn_hear_pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_pause"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@color/black"
            />
        <ImageButton
            android:id="@+id/btn_hear_stop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_stop"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@color/black"
            />
    </LinearLayout>

</LinearLayout>