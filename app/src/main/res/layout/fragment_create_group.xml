<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Facilitador.Groups.CreateGroupFragment">

    <TextView
        android:id="@+id/textView_nombre_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre meta"/>

    <EditText
        android:id="@+id/input_name_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre"/>

    <TextView
        android:id="@+id/textView_user_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="AÃ±adir usuarios"/>

    <ListView
        android:id="@+id/list_selected_users"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btn_create_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear grupo" />

</LinearLayout>