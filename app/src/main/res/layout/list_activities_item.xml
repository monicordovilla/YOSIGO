<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Facilitador.ActivitiesFacilitador.ActivityListAdapter"
    >

    <TextView
        android:id="@+id/textViewAlias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:enabled="false"
        android:text="Nombre actividad"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/modify_forum"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:foreground="@drawable/ic_edit"
        android:padding="5dp"/>

    <Button
        android:id="@+id/watch_activity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:foreground="@drawable/ic_watch"
        android:padding="5dp"/>

    <Button
        android:id="@+id/asociate_activity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_marginEnd="8dp"
        android:foreground="@drawable/ic_asociate_person" />

    <Button
        android:id="@+id/delete_activity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_marginEnd="8dp"
        android:foreground="@drawable/ic_delete"/>

</LinearLayout>